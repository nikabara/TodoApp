@model List<TodoList>

@foreach (var item in Model)
{
    <div class="todo-note">
        <div class="todo-note-inner">
            <div class="headers">
                <h1 class="main-header header">@item.Header :</h1>
                <h1 class="sub-header header"> @item.SubHeader</h1>
            </div>

            <p class="descr">"@item.Description"</p>

            <div class="dates">
                <p>Added : @item.SubmissionsDate.ToString("MM/dd/yyyy")</p>
                <p>
                    Due to :
                    @if (item.DueDate != null)
                    {
                        @item.DueDate.Value.ToString("MM/dd/yyyy")
                    }
                </p>
            </div>
        </div>

        <div class="special-utilities" id="special-utilities">
            <a asp-controller="TodoList" asp-action="Delete" asp-route-id="@item.Id" class="delete-note"><i class="bi bi-clipboard-x"></i></a>
            <a asp-controller="TodoList" asp-action="Edit" class="edit-note" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
        </div>
    </div>
}